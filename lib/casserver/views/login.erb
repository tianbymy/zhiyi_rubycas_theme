<%# coding: UTF-8 -%>
<div id="header">
  <div class="navbar-inner row"> 
    <div class="container">   
      <div class="span3">
        <img src="../themes/images/logo.png" alt="" />
      </div>
      <div class="span8 text-right">
        <a href="http://www.scscfw.com:90/users/register" class="margin-right5">注册</a>
        <a href="http://www.scscfw.com">网站首页</a>
      </div>
      
    </div>
  </div>
</div>
<div id="login-box" class="thumbnail">
  <div class="login-header" >    
    <strong><%= escape_html @organization %></strong>
      <%= t.label.central_login_title %>   
  </div>
  
  <% if @message %>  
    <div class="login-massage">
      <div class="messagebox alert <%= escape_html @message[:type] %>">
        <%= escape_html @message[:message] %>
      </div>
    </div>  
  <% end %>  

  <div class="login-form">    
    <%= erb(:_login_form, :layout => false) %>    
  </div>
</div>

